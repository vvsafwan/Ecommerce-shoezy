		                        <%
								if(value=='zerothousand'){
									%>
									<option value="all">All Price</option>
									<option value="zerothousand" selected>₹0-₹1000</option>
									<option value="twofivehundred">₹1000-₹2500</option>
									<option value="fivethousand">₹2500-₹5000</option>
									<option value="tenthousand">₹5000-₹10000</option>
									<%
								}else if(value=='twofivehundred'){
									%>
									<option value="all">All Price</option>
									<option value="zerothousand">₹0-₹1000</option>
									<option value="twofivehundred" selected>₹1000-₹2500</option>
									<option value="fivethousand">₹2500-₹5000</option>
									<option value="tenthousand">₹5000-₹10000</option>
									<%
								}else if(value=='fivethousand'){
									%>
									<option value="all">All Price</option>
									<option value="zerothousand">₹0-₹1000</option>
									<option value="twofivehundred">₹1000-₹2500</option>
									<option value="fivethousand" selected>₹2500-₹5000</option>
									<option value="tenthousand">₹5000-₹10000</option>
									<%
								}else if(value=='tenthousand'){
									%>
									<option value="all">All Price</option>
									<option value="zerothousand">₹0-₹1000</option>
									<option value="twofivehundred">₹1000-₹2500</option>
									<option value="fivethousand">₹2500-₹5000</option>
									<option value="tenthousand" selected>₹5000-₹10000</option>
									<%
								}else	{
									%>
									<option value="all" selected>All Price</option>
									<option value="zerothousand">₹0-₹1000</option>
									<option value="twofivehundred">₹1000-₹2500</option>
									<option value="fivethousand">₹2500-₹5000</option>
									<option value="tenthousand">₹5000-₹10000</option>
									<%
								}
								%>
		                      </select>
		                    </div>
		                  </div>
		                </div>
		              </div>
		            </form>
							</div>
						</div>
    			</div>
    		</div>
    	</div>
    </section>
		
