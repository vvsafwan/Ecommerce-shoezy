							<div style="position: absolute;right: 90px;">
								<button style="border: none;margin: 40px;height: 60px;background-color: #fff;"><img src="/images/search.png" alt="" width="20px"></button>
							</div>
						</div>
					</form>
    				<div class="row">
		    			<%
						if(product.length>0){
							for(let i=0;i<product.length;i++){
								%>
								<div class="col-sm-12 col-md-12 col-lg-4 ftco-animate d-flex">
									<div class="product d-flex flex-column">
										<div style="width: 286px;height: 280px;">
											<a href="/showProduct?id=<%=product[i]._id%>" class="img-prod"><img class="img-fluid" src="/productImages/<%=product[i].image[0]%>" alt="<%=product[i].image[0]%>">
												<div class="overlay"></div>
											</a>
										</div>
										<div class="text py-3 pb-4 px-3">
											<div class="d-flex">
												<div class="cat">
													<span>Lifestyle</span>
												</div>
												<div class="rating">
													<p class="text-right mb-0">
														<a href="#"><span class="ion-ios-star-outline"></span></a>
														<a href="#"><span class="ion-ios-star-outline"></span></a>
														<a href="#"><span class="ion-ios-star-outline"></span></a>
														<a href="#"><span class="ion-ios-star-outline"></span></a>
														<a href="#"><span class="ion-ios-star-outline"></span></a>
													</p>
												</div>
											</div>
											<h3><a href="#"><%=product[i].productName%></a></h3>
											<div class="pricing">
